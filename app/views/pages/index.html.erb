<% if user_signed_in? %>
<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <%= image_tag current_user.profile , width:"50%", alt:"profile"%>
                <div class="intro-text">
                    <span class="name"><%= current_user.name %></span>
                </div>
            </div>
        </div>
    </div>
</header>
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>타임라인</h2>
                <br>
            </div>
        </div>
        <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
                <label>timelinepost</label>
                <%= form_tag '/write', method: 'post' do %>
                <input type="text" class="form-control" placeholder="오늘은 무슨 일이 있었나요?" id="texts" name="texts" required data-validation-required-message="Please enter your email address.">
                <p class="help-block text-danger"></p>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-xs-12">
                <button type="submit" class="btn btn-fail btn-lg">전송</button>
                <% end %>
            </div>
        </div>
    </div>
</section>
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>최근 글</h2>
                <br>
            </div>
        </div>
        <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
                <% @timelines.each do |b| %>
                <h3><strong>[<%= b.name %>]</strong><%= b.content %></h3>
                <%= form_tag '/comment', methos: 'post' do %>
                <ul>
                    <% b.comments.each do |p| %>
                    <li><h4><strong>[<%= p.name %>]</strong><%= p.msg %></li></h4>
                    <% end %>

                    <input type="hidden" name="timeline_id" value="<%= b.id %>">
                    <li><input class="form" type="text" name="msg" class="form-control" placeholder="댓글을 달아주세요."></li>

                </ul>
                <div class="row">
                    <div class="form-group col-xs-12">
                        <button type="submit" class="btn btn-fail btn-sg">전송</button>
                    </div>
                </div>
                <% end %>
                <% end %>
            </div>
        </div>
    </section>
</div>
<% else %>
<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <%= image_tag 'index.jpeg', width:"50%", class: "img-responsive", alt: "Swallow main" %>
                <div class="intro-text">
                    <span class="name">Start Swallow</span>
                </div>
            </div>
        </div>
    </div>
</header>
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>로그인</h2>
                <br>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <!-- To configure the contact form email address, go to mail/contact_me.php and update the email address in the PHP file on line 19. -->
                <!-- The form should work on most web servers, but if the form is not working you may need to configure your web server differently. -->
                <%= form_tag login_path do %>
                <%= flash[:alert] %><br>

                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>Email</label>
                        <input type="email" class="form-control" placeholder="이메일" id="email" name="email" required data-validation-required-message="Please enter your name.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>Password</label>
                        <input type="password" class="form-control" placeholder="비밀번호" id="password" name="password" required data-validation-required-message="Please enter your email address.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <br>
                <div id="success"></div>
                <div class="row">
                    <div class="form-group col-xs-12">
                        <button type="submit" class="btn btn-success btn-lg">로그인</button>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</section>
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>회원가입</h2>
                <br>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <!-- To configure the contact form email address, go to mail/contact_me.php and update the email address in the PHP file on line 19. -->
                <!-- The form should work on most web servers, but if the form is not working you may need to configure your web server differently. -->
                <%= form_tag join_path do %>
                <%= flash[:alert] %><br>

                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>이름</label>
                        <input type="text" class="form-control" placeholder="이름" id="name" name="name" required data-validation-required-message="Please enter your name.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>이메일</label>
                        <input type="email" class="form-control" placeholder="이메일" id="email" name="email" required data-validation-required-message="Please enter your email address.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>비밀번호</label>
                        <input type="password" class="form-control" placeholder="비밀번호" id="password" name="password" required data-validation-required-message="Please enter your email address.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>비밀번호 확인</label>
                        <input type="password" class="form-control" placeholder="비밀번호 확인" id="password_confirmation" name="password_confirmation" required data-validation-required-message="Please enter your email address.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>성별</label>
                        남자 :
                        <input type="radio" name="gender" value="man" required data-validation-required-message="Please enter your email address.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>성별</label>
                        여자 :
                        <input type="radio" name="gender" value="woman" required data-validation-required-message="Please enter your email address."><br>
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <br>
                <div id="success"></div>
                <div class="row">
                    <div class="form-group col-xs-12">
                        <button type="submit" class="btn btn-success btn-lg">로그인</button>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</section>
<% end %>
